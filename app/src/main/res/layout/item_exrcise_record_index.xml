<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constAll"
    android:background="@color/white"
  >

    <ImageView
        android:id="@+id/imgHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_walk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="0.00公里"
        android:textColor="@color/sub_text_color"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imgHead"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:drawableLeft="@mipmap/icon_exrcise_time"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="@color/bottom_nav_icon_dim"
        android:textSize="11sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imgHead"
        app:layout_constraintBottom_toBottomOf="@+id/imgHead" />
    <TextView
        android:id="@+id/tvCalories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tvTime"
        app:layout_constraintRight_toLeftOf="@+id/tvDate"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawableLeft="@mipmap/icon_exrcise_kcal"
        android:text="0千卡"
        android:textSize="11sp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/bottom_nav_icon_dim"
        android:gravity="center|left"
        android:drawablePadding="5dp"

        />
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="0/00"
        android:textColor="@color/bottom_nav_icon_dim"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgHead"
            app:layout_constraintLeft_toRightOf="@+id/imgHead"
            android:background="@color/color_view"
            app:layout_constraintRight_toRightOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>