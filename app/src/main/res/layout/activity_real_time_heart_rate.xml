<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.heartrate.RealTimeHeartRateActivity"
    android:orientation="vertical"
    >
    <com.example.xingliansdk.widget.TitleBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:backcolor="@color/white"
        app:homeBackClick="true"
        app:iconActionImage="@mipmap/icon_sport_mode_walking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:midtitle="心率实时数据"
        app:showHome="true"
        app:titleTextColor01="@color/black"
        />
    <com.github.mikephil.charting.charts.LineChart
        app:layout_constraintTop_toBottomOf="@+id/ConsTitle"
        app:layout_constraintBottom_toTopOf="@+id/tvType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/harts_hrr"
        android:layout_marginBottom="20dp"
        />


</LinearLayout>