<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.setting.account.AccountActivity">

    <com.example.xingliansdk.widget.TitleBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:homeBackClick="true"
        app:midtitle="账户与安全"
        app:showHome="true"
        app:titleTextColor01="@color/main_text_color" />
    <com.example.xingliansdk.widget.SettingItemLayout
        android:id="@+id/settingUpPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:TextSize="18px"
        app:layoutType="1"
        app:mtitleTextColor="@color/sub_text_color"
        app:titleText="修改密码" />
    <com.example.xingliansdk.widget.SettingItemLayout
        android:id="@+id/settingChangePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:TextSize="18px"
        app:layoutType="1"
        app:mtitleTextColor="@color/sub_text_color"
        app:titleText="更换手机号" />

    <TextView
        android:id="@+id/tvSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="退出登录"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:padding="12dp"
        android:textColor="@color/red"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销账号"
            android:layout_gravity="bottom|center"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            />

    </LinearLayout>
</LinearLayout>