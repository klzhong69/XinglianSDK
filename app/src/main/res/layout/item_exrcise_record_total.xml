<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:text="步行(公里)"
      android:gravity="center"
      android:layout_marginRight="1dp"
      android:id="@+id/tvTotalDistanceName"
      android:textColor="@color/sub_text_color"
      android:textSize="14sp"
      />
    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalDistanceName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="步行(公里)"
        android:id="@+id/tvTotalDistance"
        android:textColor="@color/main_text_color"
        android:textSize="18sp"
        />
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/tvTotalDistanceName"
            app:layout_constraintBottom_toBottomOf="@+id/tvTotalDistance"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/color_view"
            />
</androidx.constraintlayout.widget.ConstraintLayout>