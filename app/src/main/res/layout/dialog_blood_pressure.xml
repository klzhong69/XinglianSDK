<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="66dp"
        android:background="@drawable/shape_corner_gray_border"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/iv_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/Text_D_color3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="@color/text_hint_color"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:minHeight="50dp"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收缩压"
                    android:textColor="@color/main_text_color"
                    android:textSize="14sp"
                    android:maxLength="3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/bottom_nav_icon_dim"
                    android:textSize="11sp"
                    />

            </LinearLayout>
            <EditText
                android:id="@+id/edt_systolic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/device_repeat_false_eded"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="3"
                android:inputType="number"
                android:singleLine="true"
                android:hint="请输入收缩压"
                android:minHeight="50dp"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舒张压"
                    android:textColor="@color/main_text_color"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/bottom_nav_icon_dim"
                    android:textSize="11sp"
                    />

            </LinearLayout>
            <EditText
                android:id="@+id/edt_diastolic"
                android:background="@drawable/device_repeat_false_eded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="3"
                android:hint="请输入舒张压"
                android:inputType="number"
                android:singleLine="true"
                android:minHeight="50dp"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_set"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:text="保存"
                android:textColor="@color/white"
                android:background="@drawable/device_repeat_true_green"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_card_remove"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_gravity="center"
        />
</LinearLayout>