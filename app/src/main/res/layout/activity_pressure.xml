<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.pressure.PressureActivity">

    <com.example.xingliansdk.widget.TitleBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:actionText="保存"
        app:actionTextColor="@color/color_main_green"
        app:backcolor="@color/white"
        app:homeBackClick="true"
        app:iconActionImage="@mipmap/icon_calender"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:midtitle="压力"
        app:showActionImage="true"
        app:showHome="true"
        app:titleTextColor01="@color/main_text_color" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_marginLeft="32dp"
                android:id="@+id/img_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"
                android:rotation="180"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTypeTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_left"
                app:layout_constraintRight_toLeftOf="@+id/img_right"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_marginRight="32dp"
                android:id="@+id/img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/llType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/ConsTitle">
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/main_text_color"
                />
            <TextView
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:text="最小值-最大值"
                android:textColor="@color/main_text_color"
                />
            <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:text="--"
                android:textSize="36sp"
                android:paddingBottom="8dp"
                android:textColor="@color/main_text_color"
                />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintTop_toBottomOf="@+id/llType">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/harts_hrr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvPressureAvg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="当前压力均值"
            android:paddingTop="16dp"
            android:textSize="11sp"
            android:textColor="@color/sub_text_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/view_2"
            app:layout_constraintTop_toBottomOf="@+id/constChart" />
        <TextView
            android:id="@+id/tvPressureAvgContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:paddingTop="6dp"
            android:textSize="26sp"
            android:textColor="@color/main_text_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/view_2"
            app:layout_constraintTop_toBottomOf="@+id/tvPressureAvg"
            android:paddingBottom="16dp"
            />

        <View
            android:id="@+id/view_2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPressureAvg"
            app:layout_constraintBottom_toBottomOf="@+id/tvPressureAvgContent"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/tvPressureMaxMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="最小值-最大值"
            android:paddingTop="16dp"
            android:textSize="11sp"
            android:textColor="@color/sub_text_color"
            app:layout_constraintLeft_toRightOf="@+id/view_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constChart" />
        <TextView
            android:id="@+id/tvPressureMaxMinContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:paddingTop="6dp"
            android:textSize="26sp"
            android:textColor="@color/main_text_color"
            app:layout_constraintLeft_toRightOf="@+id/view_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPressureMaxMin"
            android:paddingBottom="16dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/color_view" />
    <com.github.mikephil.charting.charts.PieChart
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/pieChart"
        android:visibility="gone"
        />
    <include
        layout="@layout/item_pressure_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:id="@+id/tvContent"
        android:background="@color/color_view"
        android:textColor="@color/bottom_nav_icon_dim"
        android:textSize="11sp"
        android:text="压力是人体对应激事件的反应。适量的运动和娱乐、充足的休息会有利于压力的调节。"
        />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
