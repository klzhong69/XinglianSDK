<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.xingliansdk.widget.TitleBarLayout
        android:id="@+id/amapRecordTb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:midtitle="运动"
        android:layout_width="match_parent"
        app:showHome="true"
        app:titleTextColor01="@color/main_text_color"
        android:layout_height="?actionBarSize"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/amapRecordTb"
        android:id="@+id/commDateSelectLayout"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemDateLeftImg"
            app:layout_constraintRight_toLeftOf="@id/itemDateTitleTv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_left_img"/>



        <TextView
            android:id="@+id/itemDateTitleTv"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/text_size_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-12-12"/>


        <ImageView
            android:id="@+id/itemDateRightImg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/itemDateTitleTv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_right_img"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/emptyTv"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commDateSelectLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无数据"
        android:textSize="@dimen/text_size_20"
        android:padding="5dp"
        app:drawableTopCompat="@drawable/ic_empty_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/amapRecordRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/commDateSelectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>